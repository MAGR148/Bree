<turbo-frame id="patient-recipes">


  <div class="relative h-screen bg-gray-50 flex overflow-hidden">
  
    <!-- Content area -->
    <div class="flex-1 flex flex-col overflow-hidden">

      <!-- Main content -->
      <div class="flex-1 flex items-stretch overflow-hidden">
        <main class="flex-1 overflow-y-auto">
          <div class="pt-6 max-w-7xl mx-auto">

            <!-- Sub-header -->
            <div class="mt-6 flex justify-between items-center sm:px-16">
              <h1 class="text-3xl font-bold text-gray-700">05. Selecciona recetas</h1>
            </div>

            <div class="mt-0 sticky top-0 py-0 bg-gray-50 z-10 ">
              <!-- Tabs -->
              <div class="mt-3 sm:mt-2">
                <div class="sm:hidden">
                  <label for="tabs" class="sr-only">Select a tab</label>
                  <!-- Use an "onChange" listener to redirect the user to the selected tab URL. -->
                  <select id="tabs" name="tabs" class="block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md">
                    <option selected>Desayuno</option>
                    <option>Colación 1</option>
                    <option>Comida</option>
                    <option>Colación 2</option>
                    <option>Cena</option>
                  </select>
                </div>
                <div class="hidden sm:block">
                  <div class="flex items-center border-b border-gray-200 sm:px-16">
                    <nav 
                      class="flex-1 -mb-px flex space-x-6 xl:space-x-8" 
                      aria-label="Tabs"
                      data-controller="recipe-active-tab"
                      data-recipe-active-tab-selected-class="border-indigo-500 text-indigo-600"
                      data-recipe-active-tab-not-selected-class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300"
                      data-recipe-active-tab-span-selected-class="bg-indigo-100 text-indigo-700"
                      data-recipe-active-tab-span-not-selected-class="bg-gray-100 text-gray-600"
                    >

                      <!-- Current: "border-indigo-500 text-indigo-600", Default: "border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300" -->
                      <a 
                        aria-current="page" 
                        class="border-indigo-500  text-indigo-600 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm"
                        data-controller="recipe-tabs"
                        data-recipe-tabs-id-value="patient-recipe-times"
                        data-recipe-tabs-url-value="<%= edit_admin_patient_recipe_time_path(patient_id: @patient.id, recipe_time: 'breakfast', id: 1) %>"
                        data-action="click->recipe-tabs#changeTab click->recipe-active-tab#select"
                        data-recipe-active-tab-target="tab"
                      >
                        Desayuno
                        <span class="bg-indigo-100 text-indigo-700 hidden ml-2 py-0.5 px-2.5 rounded-full text-xs font-semibold md:inline-block">4</span>
                      </a>

                      <a 
                        class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm"
                        data-controller="recipe-tabs"
                        data-recipe-tabs-id-value="patient-recipe-times"
                        data-recipe-tabs-url-value="<%= edit_admin_patient_recipe_time_path(patient_id: @patient.id, recipe_time: 'firstCollation', id: 1) %>"
                        data-action="click->recipe-tabs#changeTab click->recipe-active-tab#select"
                        data-recipe-active-tab-target="tab"
                      >
                        Colación 1
                        <span class="bg-gray-100 text-gray-600 hidden ml-2 py-0.5 px-2.5 rounded-full text-xs font-semibold md:inline-block">9</span>
                      </a>

                      <a 
                        class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm"
                        data-controller="recipe-tabs"
                        data-recipe-tabs-id-value="patient-recipe-times"
                        data-recipe-tabs-url-value="<%= edit_admin_patient_recipe_time_path(patient_id: @patient.id, recipe_time: 'meal', id: 1) %>"
                        data-action="click->recipe-tabs#changeTab click->recipe-active-tab#select"
                        data-recipe-active-tab-target="tab"
                      >
                        Comida
                        <span class="bg-gray-100 text-gray-600 hidden ml-2 py-0.5 px-2.5 rounded-full text-xs font-semibold md:inline-block">3</span>
                      </a>

                      <a 
                        class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm"
                        data-controller="recipe-tabs"
                        data-recipe-tabs-id-value="patient-recipe-times"
                        data-recipe-tabs-url-value="<%= edit_admin_patient_recipe_time_path(patient_id: @patient.id, recipe_time: 'secondCollation', id: 1) %>"
                        data-action="click->recipe-tabs#changeTab click->recipe-active-tab#select"
                        data-recipe-active-tab-target="tab"
                      >
                        Colación 2
                        <span class="bg-gray-100 text-gray-600 hidden ml-2 py-0.5 px-2.5 rounded-full text-xs font-semibold md:inline-block">0</span>
                      </a>

                      <a 
                        class="border-transparent text-gray-500 hover:text-gray-700 hover:border-gray-300 whitespace-nowrap py-4 px-1 border-b-2 font-medium text-sm"
                        data-controller="recipe-tabs"
                        data-recipe-tabs-id-value="patient-recipe-times"
                        data-recipe-tabs-url-value="<%= edit_admin_patient_recipe_time_path(patient_id: @patient.id, recipe_time: 'dinner', id: 1) %>"
                        data-action="click->recipe-tabs#changeTab click->recipe-active-tab#select"
                        data-recipe-active-tab-target="tab"
                      >
                        Cena
                        <span class="bg-gray-100 text-gray-600 hidden ml-2 py-0.5 px-2.5 rounded-full text-xs font-semibold md:inline-block">0</span>
                      </a>
                    </nav>
                  </div>
                </div>
              </div>
            </div>
            <!-- <hr class=" mt-4 sm:mx-16"> -->

            <turbo-frame 
              id="patient-recipe-times" 
              src="<%= edit_admin_patient_recipe_time_path(patient_id: @patient.id, recipe_time: 'breakfast', id: 1) %>"
              data-controller="operation-tabs-shower"
						  data-operation-tabs-shower-target="turboFrame"
						  data-action="refreshRecipeTimeTurboFrame@window->operation-tabs-shower#updateTurboFrame"
            >
              Content will be replaced when /messages has been loaded.
            </turbo-frame>
          </div>
        </main>

        <!-- Details sidebar -->
        <aside 
          class=" w-96 bg-white p-8 pb-40 border-l border-gray-200 overflow-y-auto lg:block "
          data-controller="recipe-resume"
          data-action="recipeResume@window->recipe-resume#updateResume"
        >
          <div class="space-y-6">
            <div>
              <div class="block w-full h-52 rounded-lg overflow-hidden">
                <img data-recipe-resume-target="image" src="#" alt="" class="object-cover">
              </div>
              <div class="mt-4 flex items-start justify-between">
                <div>
                  <h2 
                    data-recipe-resume-target="name" 
                    class="text-lg font-semibold text-gray-700"
                  >
                    <span class="sr-only">Details for </span>Mole Poblano
                  </h2>
                </div>
                <div class="flex justify-end">
                    <!-- Botón check inactivo en estado default - icon: outline/check -->
                  <!-- <button type="button" class="flex-shrink-0 ml-4 bg-white rounded-full h-8 w-8 flex items-center justify-center text-gray-400 bg-gray-100 hover:bg-gray-200 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                    </svg>
                    <span class="sr-only">Select</span>
                  </button> -->
                  
                  <!-- Botón check en estado activo - icon: solid/check-circle-->
                  <button type="button" class="flex-shrink-0 ml-4 bg-white rounded-full h-8 w-8 flex items-center justify-center text-green-400 bg-green-100 hover:bg-green-200 hover:text-green-600 focus:outline-none focus:ring-2 focus:ring-green-500"> 
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    <span class="sr-only">Select</span>
                  </button>

                  <button type="button" class="ml-1.5 flex-shrink-0 bg-white rounded-full h-8 w-8 flex items-center justify-center text-gray-400 bg-gray-100 hover:bg-gray-100 hover:text-gray-600 focus:outline-none focus:ring-2 focus:ring-indigo-500">
                    <!-- Heroicon name: solid/pencil -->
                    <svg class="h-5 w-5" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" aria-hidden="true">
                      <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z" />
                    </svg>
                    <span class="sr-only">Edit</span>
                  </button>
                </div>
              </div>
              <div class="mt-1">
                <span 
                  data-recipe-resume-target="preparationTime" 
                  class="inline-flex items-center mt-1 px-1.5 py-0.5 rounded-full text-xs font-medium bg-white border border-gray-300 text-gray-500"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Prep 15 min
                </span>
                <span 
                  data-recipe-resume-target="cookingTime" 
                  class="inline-flex items-center mt-1 ml-2 px-1.5 py-0.5 rounded-full text-xs font-medium bg-white border border-gray-300 text-gray-500"
                >
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Cocción 10 min
                </span>
              </div>
              
            </div>
            
            <dl class="border-t border-gray-200 divide-y divide-gray-200">
              <div class="py-1 flex text-sm font-medium grid grid-cols-3 gap-4 items-center">
                <dt class="text-red-600 flex-shrink-0 col-span-1">Faltante</dt>
                <dd class="text-gray-400 col-span-1 ml-3">
                  AOA MBAG
                  <span class="block text-red-600 font-regular text-xs"></span>
                </dd>
                <div class="col-span-1 flex justify-end">
                  <button type="button" class="inline-flex items-center px-0.5 py-0.5 border border-transparent text-sm leading-4 font-medium rounded-full text-indigo-600 bg-white hover:bg-indigo-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    <!-- Heroicon name: outline/plus -->
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </button>
                </div>
              </div>

              <div class="py-1 flex text-sm font-medium grid grid-cols-3 gap-4 items-center">
                <dt class="text-red-600 flex-shrink-0 col-span-1">Faltante</dt>
                <dd class="text-gray-400 col-span-1 ml-3">
                  Leguminosas
                  <span class="block text-red-600 font-regular text-xs"></span>
                </dd>
                <div class="col-span-1 flex justify-end">
                  <button type="button" class="inline-flex items-center px-0.5 py-0.5 border border-transparent text-sm leading-4 font-medium rounded-full text-indigo-600 bg-white hover:bg-indigo-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
                    <!-- Heroicon name: outline/plus -->
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v3m0 0v3m0-3h3m-3 0H9m12 0a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </button>
                </div>
              </div>
            </dl>
            
            
            <div>
              <div class="flex bg-gray-100 p-0.5 items-center rounded-sm">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-800 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2V6zM14 6a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2V6zM4 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2H6a2 2 0 01-2-2v-2zM14 16a2 2 0 012-2h2a2 2 0 012 2v2a2 2 0 01-2 2h-2a2 2 0 01-2-2v-2z" />
                </svg>
                <h3 class="font-medium text-gray-900">Ingredientes</h3>
              </div>
              <dl 
                class="border-t border-gray-200 divide-y divide-gray-200"
                data-recipe-resume-target="ingredients"
              >
              </dl>
            </div>

            <div>
              <div class="flex bg-gray-100 p-0.5 items-center rounded-sm">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-800 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 14v6m-3-3h6M6 10h2a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2zm10 0h2a2 2 0 002-2V6a2 2 0 00-2-2h-2a2 2 0 00-2 2v2a2 2 0 002 2zM6 20h2a2 2 0 002-2v-2a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2z" />
                </svg>
                <h3 class="font-medium text-gray-900">Acompañamiento</h3>
              </div>
              <dl 
                data-recipe-resume-target="accompaniment"
                class="border-t border-gray-200 divide-y divide-gray-200"
              >
              </dl>
            </div>

            <div>
              <div class="flex bg-gray-100 p-0.5 items-center rounded-sm">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-800 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
                <h3 class="font-medium text-gray-900">Condimento / Alimento libre</h3>
              </div>
              <dl class="border-t border-gray-200 divide-y divide-gray-200">
                
                <div class="py-3 flex justify-start text-sm font-medium">
                  <dt class="text-gray-500">
                    01.
                  </dt>
                  <dd class="text-gray-500 ml-4">Cilantro crudo picado </dd>
                </div>

                <div class="py-3 flex justify-start text-sm font-medium">
                  <dt class="text-gray-500">
                    02.
                  </dt>
                  <dd class="text-gray-500 ml-4">Pizca de sal y pimienta</dd>
                </div>

              </dl>
            </div>

            <div>
              <div class="flex bg-gray-100 p-0.5 items-center rounded-sm">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-800 mr-2" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01" />
                </svg>
                <h3 class="font-medium text-gray-900">Preparación</h3>
              </div>
              <dl 
                data-recipe-resume-target="preparation"
                class="border-t border-gray-200 divide-y divide-gray-200"
              >
              </dl>
            </div>

          </div>
        </aside>
      </div>
    </div>
  </div>
</turbo-frame>